@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products</h4>
            <a asp-action="Create">Create</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Photo
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Category name
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/images/website-images/@product.Image" alt="image" />
                                </td>
                                <td>
                                    @product.Name
                                </td>
                                <td>
                                    @product.Price
                                </td>
                                <td>
                                    @product.Category.Name
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary">
                                        <i class="mdi mdi-information-outline" style="color:white"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">
                                        <i class="mdi mdi-grease-pencil" style="color:white"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger @(ViewBag.Count==1?"disabled":"")">
                                        <i class="mdi mdi-delete" style="color:white"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

